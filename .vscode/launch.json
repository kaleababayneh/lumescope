    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch LumeScope Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lumescope",
            "cwd": "${workspaceFolder}",
            "env": {
                // Override any settings here, or use .env file
                // "PORT": "18080",
                // "DB_DSN": "postgres://postgres:postgres@localhost:5432/lumescope?sslmode=disable",
                // "LUMERA_API_BASE": "http://localhost:1317"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Launch LumeScope (Custom Port)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lumescope",
            "cwd": "${workspaceFolder}",
            "env": {
                "PORT": "18081"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug LumeScope Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "env": {},
            "args": [
                "-test.v"
            ],
            "showLog": true
        }
    ]
}